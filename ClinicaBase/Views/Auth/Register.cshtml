@model ClinicaBase.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="main-container">

    @{
        Console.WriteLine(Model.Documento);
        if(Model.Message != null)
        {
            if (Model.Succeed == 0)
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Message
                </div>
            }
        }
    }

    <div class="img-inicial">
        <div class="img-auth-container">
            <img src="~/img/consulting.png" alt="Clinica" />
        </div>
    </div>

    <div class="login-container">

        <div class="login-card">
            <div class="mt-5 mb-5 text-center">
                <h1>Nuevo Usuario</h1>
            </div>

            <form asp-controller="Auth" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Documento:</label>                    
                    <label class="text-danger fw-bold">*</label>
                    <input asp-for="Documento" type="text" class="form-control" />
                    <span asp-validation-for="Documento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Nombres:</label>
                    <label class="text-danger fw-bold">*</label>
                    <input asp-for="Nombres" type="text" class="form-control" />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Apellidos:</label>
                    <label class="text-danger fw-bold">*</label>
                    <input asp-for="Apellidos" type="text" class="form-control" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Correo:</label>
                    <label class="text-danger fw-bold">*</label>
                    <input asp-for="Correo" type="email" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Telefono:</label>
                    <label class="text-danger fw-bold">*</label>
                    <input asp-for="Telefono" type="tel" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>                       

                <div class="mb-3">
                    <label class="form-label">Rol:</label>
                    <label class="text-danger fw-bold">*</label>
                    <select asp-for="Rol" asp-items="@Model.Roles" class="form-select"></select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-success">Ir a Login</a>
                    <button asp-action="Register" type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
